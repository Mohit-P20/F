# Supply Chain Pro Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=development
DOMAIN=localhost

# =============================================================================
# HYPERLEDGER FABRIC CONFIGURATION
# =============================================================================
CHANNEL_NAME=mychannel
CC_NAME=food-supply-chain
FABRIC_IDENTITY=manager

# Network ports (adjust if needed)
PEER0_ORG1_PORT=7051
PEER0_ORG2_PORT=9051
ORDERER_PORT=7050

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=3003

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-openssl-rand-base64-64

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
COUCHDB_USER=admin
COUCHDB_PASSWORD=adminpw
COUCHDB_SECRET=change-this-in-production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# TLS Configuration
# Set to false for development with self-signed certificates
# Set to true for production with proper SSL certificates
TLS_ENABLED=false

# TLS Certificate paths (required when TLS_ENABLED=true)
CERT_PATH=./certs/server.crt
KEY_PATH=./certs/server.key
CA_PATH=./certs/ca.crt

# Fabric CA Admin Password (change in production)
FABRIC_CA_ADMIN_PASSWORD=adminpw

# Connection profile path (optional, auto-detected if not set)
FABRIC_CONNECTION_PROFILE_PATH=

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Grafana
GRAFANA_PASSWORD=change-this-password

# Prometheus
PROMETHEUS_PORT=9090

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=./backups
RETENTION_DAYS=30

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# SSL Certificate paths (for production)
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# Email configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASS=your-email-password

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Node.js TLS settings for development
# Set to 0 to disable TLS verification in development (automatically set when TLS_ENABLED=false)
NODE_TLS_REJECT_UNAUTHORIZED=

# React app configuration
REACT_APP_API_BASE_URL=http://localhost:3003

# Debug settings
DEBUG=false
VERBOSE_LOGGING=false

# Fabric SDK settings
FABRIC_LOGGING_SPEC=INFO

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=supply-chain-pro
IMAGE_TAG=latest
CA_IMAGETAG=latest

# =============================================================================
# FABRIC CA CONFIGURATION
# =============================================================================
FABRIC_CA_ADMIN_PASSWORD=adminpw
FABRIC_CA_SERVER_PORT=7054

# =============================================================================
# NOTES
# =============================================================================
# 1. Change all default passwords before production deployment
# 2. Generate strong JWT secret: openssl rand -base64 64
# 3. Use proper SSL certificates in production
# 4. Configure proper SMTP settings for email notifications
# 5. Set appropriate rate limits based on your requirements
# 6. Enable TLS and proper certificate validation in production
# 7. For development: Set TLS_ENABLED=false to avoid certificate issues
# 8. For production: Set TLS_ENABLED=true and configure proper certificate paths
# 9. Generate strong passwords: openssl rand -base64 32
# 10. Test TLS configuration before deploying to production